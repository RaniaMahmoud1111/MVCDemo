@model IEnumerable<DepartmentDto>
@{
    ViewData["Title"] = "Index";
}

<h1 class="my-3">All Departments</h1>

<a class="btn btn-primary my-3" asp-controller="Department" asp-action="Create">Create Department</a>
<br/>
@if(Model.Any())
{
    // if i has departments

    <table class="table table-dark table-hover">
        <thead class="text-center">
            <tr>
                <th>@Html.DisplayNameFor(D=>D.Code)</th>
                <th>@Html.DisplayNameFor(D=>D.Name)</th>
                <th>@Html.DisplayNameFor(D=>D.Description)</th>
                <th>@Html.DisplayNameFor(D=>D.DateOfCreation)</th>
                <th>Details</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>

        </thead>
        <tbody class="text-center">
            @foreach(var department in Model)
            {
                <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.Description</td>
                    <td>@department.DateOfCreation</td>
                    <td><a class="btn btn-primary" asp-action="Details" asp-route-id="@department.Id"><i class="fas fa-eye"></i>Details</a></td>@* asp-route-id  this means that Details action has parameter called id ,if it has name it will be asp-route-name  *@
                    <td><a class="btn btn-success" asp-action="Edit" asp-route-id="@department.Id"><i class="fas fa-edit"></i>Edit</a></td>
                    <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@department.Id" ><i class="fas fa-trash"></i>Delete</a></td>
                </tr>
            }
        </tbody>
    </table>


}
else
{
    <div class="alert-info mt-2">
         <h2>No Departments Found !!</h2>
    </div>
}